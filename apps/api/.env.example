# OpenRouter API
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# LLM Settings
LLM_MODEL=google/gemini-2.0-flash-001
LLM_FALLBACK_MODEL=google/gemini-2.5-flash

# STT Settings (STT_MODEL/STT_DEVICE только при STT_PROVIDER=local)
STT_PROVIDER=local
STT_MODEL=base
STT_DEVICE=cpu
OPENAI_API_KEY=
OPENAI_STT_MODEL=whisper-1
STT_CHUNK_SECONDS=2.0

# Server
API_HOST=127.0.0.1
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Storage + DB (cloud)
DATABASE_URL=sqlite:///./voicecopilot.db
STORAGE_BUCKET=
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT_URL=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_PUBLIC_BASE_URL=
